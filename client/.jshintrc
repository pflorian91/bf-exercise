{
  /* -- Enforcing Options -- */
  "bitwise": true,
  "curly": true,
  "eqeqeq": true,
  /*"esversion": 5,*/
  "forin": true,
  "freeze": true,
  "funcscope": true,
  "futurehostile": true,
  "globals": {
    /* Setting an entry to true enables reading and writing to that variable. Setting it to false will trigger JSHint to consider that variable read-only. */
    "it": false,
    "describe": false
  },
  "latedef": "nofunc",
  "maxcomplexity": 8,
  "maxdepth": 4,
  "maxerr": 20,
  "maxparams": 5,
  "maxstatements": 20,
  "noarg": true,
  "nonbsp": true,
  "nonew": true,
  "notypeof": true,
  "predef": [
    /* Prefixing a variable name with a hyphen (-) character will remove that name from the collection of predefined variables. */
    "angular",
    "module",
    "require"
  ],
  "quotmark": "single",
  "shadow": false,
  "singleGroups": true,
  "strict": "implied",
  "undef": true,
  "unused": true,
  /*"varstmt": true,*/

  /* -- Relaxing options -- */
  "asi": false,
  "boss": false,
  "debug": false,
  "eqnull": true,
  "evil": false,
  "expr": false,
  "funcscope": false,
  "iterator": false,
  "lastsemic": false,
  "loopfunc": false,
  "moz": false,
  "noyield": false,
  "plusplus": false,
  "proto": false,
  "scripturl": false,
  "supernew": true,
  /* Constructions are sometimes used to produce singletons in JavaScript: */
  "validthis": true,
  "withstmt": false,
  /* -- Environments -- */
  "browser": true,
  "browserify": false,
  "devel": false,
  "jasmine": true,
  "jquery": true
  /*"mocha": true,
  "module": true,
  "node": true*/
}
